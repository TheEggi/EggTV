<addon id="plugin.video.eggtv" version="1.0.0" name="EggTV" provider-name="TheEggi">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="2.9.1"/>
        <import addon="script.module.urlresolver" version="2.2.0"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
        <import addon="script.module.six" version="1.9.0"/>
        <import addon="script.module.pytrakt" version="2.4.5"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Stream videos in multiple languages</summary>
        <description>Stream videos in multiple languages. Uses Trakt for metadata.</description>
        <platform>all</platform>
    </extension>
</addon>
